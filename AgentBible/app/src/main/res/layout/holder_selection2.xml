<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0"
            android:id="@+id/ll_first"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_first"
                style="@style/tv_select_style"
                android:text="区域" />

            <ImageView
                android:id="@+id/iv_first_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View style="@style/weight_view" />

        <LinearLayout
            android:id="@+id/ll_second"
            android:layout_weight="0"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_second"
                style="@style/tv_select_style"
                android:text="价格" />

            <ImageView
                android:id="@+id/iv_second_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View
            android:id="@+id/third_weight_view"

            style="@style/weight_view" />

        <LinearLayout
            android:id="@+id/ll_third"

            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_third"
                style="@style/tv_select_style"
                android:text="来源" />

            <ImageView
                android:id="@+id/iv_third_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

        <View style="@style/weight_view" />

        <LinearLayout
            android:id="@+id/ll_last"
            android:layout_weight="0"
            style="@style/item_select_style">

            <TextView
                android:id="@+id/tv_last"
                style="@style/tv_select_style"
                android:text="更多" />

            <ImageView
                android:id="@+id/iv_last_arrow"
                style="@style/arrow_select_style" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divide_style" />
</LinearLayout>