<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/selector_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_lr"
                android:textSize="21sp"
                android:text="01" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/tv_rank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_dark"
                android:layout_centerVertical="true"
                android:text="徐汇苑" />


            <TextView
                android:id="@+id/tv_village_area"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:text="徐汇-杨行" />


            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_marginRight="@dimen/margin_lr"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pull_down" />


        </RelativeLayout>

        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rank_number2"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_lr"
                android:textSize="21sp"
                android:text="01" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_toRightOf="@id/tv_rank_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:text="成交总价:" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_toRightOf="@id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_dark"
                android:layout_centerVertical="true"
                android:text="2222万" />


            <ImageView
                android:id="@+id/iv_arrow2"
                android:layout_marginRight="@dimen/margin_lr"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pull_down" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_toLeftOf="@id/iv_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_dark"
                android:layout_centerVertical="true"
                android:text="5000套" />

            <TextView
                android:id="@+id/tv_number_label"
                android:layout_toLeftOf="@id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:text="成交套数:" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_charts_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fr_chart1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/divide_style" />

            <FrameLayout
                android:layout_marginTop="10dp"
                android:id="@+id/fr_chart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_lr"
                android:layout_marginRight="@dimen/margin_lr"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="在售量:10套" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="在租量:10套" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
