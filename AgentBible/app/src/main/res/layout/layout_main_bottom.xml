<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:translationZ="10dp"
        android:elevation="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_main"
                style="@style/home_menu_rl">

                <ImageView
                    android:id="@+id/iv_main"
                    style="@style/home_bottom_iv"
                    android:src="@drawable/tab_home_press" />

                <TextView
                    android:id="@+id/tv_main"
                    style="@style/home_bottom_tv"
                    android:layout_below="@id/iv_main"
                    android:text="首页" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_data"
                style="@style/home_menu_rl">


                <ImageView
                    android:id="@+id/iv_data"
                    style="@style/home_bottom_iv"
                    android:src="@drawable/data_press" />

                <TextView
                    android:id="@+id/tv_data"
                    style="@style/home_bottom_tv"
                    android:layout_below="@id/iv_data"
                    android:text="数据分析" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_me"
                style="@style/home_menu_rl">

                <ImageView
                    android:id="@+id/iv_me"
                    style="@style/home_bottom_iv"
                    android:src="@drawable/my_press" />

                <TextView
                    android:id="@+id/tv_me"
                    style="@style/home_bottom_tv"
                    android:layout_below="@id/iv_me"
                    android:text="我" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>