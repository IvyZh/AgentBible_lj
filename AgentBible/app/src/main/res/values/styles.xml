<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_blue</item>
        <item name="colorPrimaryDark">@color/common_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:listDivider">@drawable/divider_bg</item>-->
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#29D9EA</item>
        <item name="colorPrimaryDark">#29D9EA</item>
        <!--<item name="android:listDivider">@drawable/divider_bg</item>-->
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22px</item>
        <item name="android:maxHeight">22px</item>
    </style>


    <!--Home Menu Style-->

    <style name="selection_rl">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!--Home Menu Style-->

    <style name="home_menu_rl">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_common</item>
    </style>

    <style name="home_menu_iv">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="home_menu_tv">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/home_menu_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Home Bottom Style-->
    <style name="home_bottom_iv">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="home_bottom_tv">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_text_nor</item>
    </style>


    <!--Divide Style-->
    <style name="divide_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divide_color</item>
    </style>

    <style name="divide_style_left" parent="divide_style">
        <item name="android:layout_marginLeft">40dp</item>
    </style>


    <!--SearchBar Style-->
    <style name="InternalSearchEditTextTheme">
        <item name="colorControlNormal">@color/internal_search_grey</item>
        <item name="colorControlActivated">@color/internal_search_grey</item>
        <item name="colorControlHighlight">@color/internal_search_grey</item>
    </style>


    <style name="second_house_detail" parent="home_menu_tv">
        <item name="android:textColor">@color/common_red</item>
    </style>

    <style name="map_poi_style">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>


    <!--百度地图-->
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--MeFragment Item-->

    <style name="me_item_iv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_lr</item>
    </style>

    <style name="me_item_tv">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_lr</item>
    </style>


    <style name="me_item_arrow">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_lr</item>
        <item name="android:src">@drawable/right</item>
    </style>

    <style name="me_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/selector_common</item>
    </style>


    <!--Hot menu-->
    <style name="hot_menu_iv">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--一般是textSize为12sp的样式-->

    <style name="tv_12_grey_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>


    <!--一般是textSize为12sp的样式-->

    <style name="tv_select_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="arrow_select_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:src">@drawable/btn_pulldown</item>
    </style>

    <style name="item_select_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/margin_lr</item>
        <item name="android:paddingRight">@dimen/margin_lr</item>
    </style>


    <!--二手房详细信息-->
    <style name="house_detail_tv" parent="home_menu_tv">
        <item name="android:textColor">@color/text_light</item>
    </style>


    <!--每一个Card 的title tv-->
    <style name="card_title_tv">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">@dimen/margin_lr</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="card_title_tv_small" parent="card_title_tv">
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="card_arrow">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin_lr</item>
        <item name="android:src">@drawable/right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!--Weith=1-->

    <style name="weight_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="house_feature_tv" parent="home_menu_tv">
        <item name="android:layout_marginLeft">4dp</item>
    </style>


    <!--小区信息-配套+基本信息tv-->


    <style name="valliage_basic_label_tv">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/margin_lr</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="valliage_basic_label_tv_l" parent="valliage_basic_label_tv">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="valliage_basic_label_tv_no_margin" parent="valliage_basic_label_tv">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="valliage_basic_tv">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_lr</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="valliage_basic_ll">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--筛选-更多-->

    <style name="cb_select">
        <item name="android:textColor">@drawable/selector_tv_selection_more</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/selector_selection_more</item>
    </style>

    <style name="cb_month_year" parent="cb_select">
        <item name="android:background">@drawable/selector_selection_more</item>
    </style>

</resources>
